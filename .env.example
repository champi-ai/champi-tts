# Champi-TTS Environment Configuration
# Copy this file to .env and customize

# ============================================================================
# KOKORO TTS CONFIGURATION
# ============================================================================

# Device Settings
KOKORO_USE_GPU=true
KOKORO_FORCE_CPU=false

# Model Settings
KOKORO_DEFAULT_LANGUAGE=a  # 'a' = en-us, 'b' = en-gb
KOKORO_DEFAULT_SPEED=1.0
KOKORO_DEFAULT_VOICE=am_adam

# Text Processing
KOKORO_NORMALIZE_TEXT=true
KOKORO_ADVANCED_NORMALIZATION=true

# Streaming Settings
KOKORO_STREAMING_CHUNK_SIZE=200
KOKORO_ENABLE_STREAMING=true

# Audio Settings
KOKORO_SAMPLE_RATE=24000
KOKORO_AUDIO_FORMAT=wav
KOKORO_TTS_AUDIO_FORMAT=pcm

# Initialization
KOKORO_WARMUP_ON_INIT=true
KOKORO_AUTO_DOWNLOAD_MODEL=true

# Service Management
KOKORO_AUTO_START=false

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# UI Window Position
TTS_UI_WINDOW_X=50
TTS_UI_WINDOW_Y=50

# UI Update Rate
TTS_UI_POLL_RATE_HZ=60

# ============================================================================
# CLI CONFIGURATION
# ============================================================================

# Default provider for CLI
CHAMPI_TTS_DEFAULT_PROVIDER=kokoro

# Default voice for CLI
CHAMPI_TTS_DEFAULT_VOICE=am_adam

# Default speed for CLI
CHAMPI_TTS_DEFAULT_SPEED=1.0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
CHAMPI_TTS_LOG_LEVEL=INFO

# Log File Path (optional)
# CHAMPI_TTS_LOG_FILE=/path/to/champi-tts.log

# Log Format
# CHAMPI_TTS_LOG_FORMAT="<green>{time:HH:mm:ss}</green> | <level>{level: <8}</level> | <level>{message}</level>"

# ============================================================================
# READER SERVICE CONFIGURATION
# ============================================================================

# Show UI by default
CHAMPI_TTS_SHOW_UI=false

# Pause between paragraphs (seconds)
CHAMPI_TTS_PARAGRAPH_PAUSE=0.5

# Max queue size
CHAMPI_TTS_MAX_QUEUE_SIZE=100

# ============================================================================
# AUDIO CONFIGURATION
# ============================================================================

# Audio normalization target dB
AUDIO_NORMALIZE_TARGET_DB=-20.0

# Audio playback device (leave empty for default)
# AUDIO_PLAYBACK_DEVICE=

# ============================================================================
# MODEL & CACHE PATHS
# ============================================================================

# Model directory (leave empty for default)
# KOKORO_MODEL_DIR=/path/to/models

# Voice directory (leave empty for default)
# KOKORO_VOICE_DIR=/path/to/voices

# Cache directory (leave empty for default)
# KOKORO_CACHE_DIR=/path/to/cache

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable profiling
PROFILE=false

# Test mode (disable GPU, use minimal models)
TEST_MODE=false
